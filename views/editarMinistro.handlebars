  <script>
    function abrirModalEditarMinistro(cod) {
      // Buscar dados do ministro via AJAX
      fetch(`/api/ministro/detalhes/${cod}`)
        .then(res => res.json())
        .then(ministro => {
          document.getElementById('modalNomeMinistro').value = ministro.nome || '';
          document.getElementById('modalEmailMinistro').value = ministro.email || '';
          // Preencher outros campos se necess√°rio
          // Salvar o c√≥digo para uso no submit
          document.getElementById('formModalEditarMinistro').dataset.cod = cod;
          // Abrir modal
          var modal = new bootstrap.Modal(document.getElementById('modalEditarMinistro'));
          modal.show();
        });
    }

    document.getElementById('formModalEditarMinistro').addEventListener('submit', function(e) {
      e.preventDefault();
      const cod = e.target.dataset.cod;
      const dados = {
        nome: document.getElementById('modalNomeMinistro').value,
        email: document.getElementById('modalEmailMinistro').value
        // Adicione outros campos aqui
      };
      fetch(`/ministro/editar/${cod}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(dados)
      })
      .then(res => res.ok ? res.json() : Promise.reject(res))
      .then(() => {
        alert('Perfil atualizado com sucesso!');
        location.reload();
      })
      .catch(() => alert('Erro ao atualizar perfil.'));
    });
  </script>


